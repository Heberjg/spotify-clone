---
import SpotifyLogo from "./HeaderIcons/SpotifyLogo.astro";
import SpotifyHome from "./HeaderIcons/SpotifyHome.astro";
import DownloadLogo from "./HeaderIcons/DownloadLogo.astro";
import Notification from "./HeaderIcons/Notification.astro";
import Searcher from "./HeaderComponents/Searcher.astro"; 
import NavUser from "./HeaderComponents/NavUser.astro";
// Header.astro}}

---


<header >
  <nav class="home-header flex gap-5 place-items-center w-full" >
    <a href="https://www.spotify.com" target="_blank" rel="noopener noreferrer" class="">
      <SpotifyLogo  />
    </a>
    <div class="home-searcher flex gap-3  flex-2 place-items-center w-fit" >
      <a href="" class="bg-neutral-800 rounded-full p-2.5 hover:bg-neutral-600 transition duration-200 ease-in-out">
        <div class="hover:scale-108 transition-all duration-200 ease-in-out">
        <SpotifyHome />
        </div>
      </a>
      <Searcher />
    </div>
    <div class="user flex-1 flex place-items-center justify-start transition-all duration-200 mr-1" >
      <nav class="user-nav flex place-items-center gap-4 transition-all duration-150" >
        <div class="flex text-nowrap rounded-full p-0 place-items-center   fill-neutral-400 hover:fill-neutral-100 text-neutral-400 hover:text-neutral-100 hover:scale-105 transition-all duration-200 ease-in-out">
          <a href="" class="container-download fill-inherit p-0" >
            <DownloadLogo  />
          </a>
          <span id="download-text" aria-hidden="true" tabindex="-1" class="text-[0.76em] cursor-pointer over">instalar aplicacion</span>
        </div>
        <a href="" class="fill-neutral-400 hover:fill-neutral-200 hover:scale-110 transition-all duration-150 ease-in-out" >
          <Notification />
        </a>
        <NavUser />
      </nav>
    </div>
  </nav>
</header>


<style>
  header {
    grid-area: hd;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;
    padding: 0.6em 1em;
    background-color: var(--background-color);
  }
  
  .home-header a {
    text-decoration: none;
    /* color: var(--text-color); */
  }

  .User-list-nav {
    display: none;
    list-style: none;
  }

#download-text {
  /* visibility: hidden; */
  width: 0;
  margin: 0;
  opacity: 0;
  padding: 0;
  interpolate-size: allow-keywords;
  transition: width 0.2s ease-in-out, opacity 0.2s ease-in-out, margin 0.2s ease-in-out
}

.container-download:hover:has(#download-text.visible) {
  /* scale: 105%; */
}

  #download-text.visible {
  /* visibility: visible; */
  width: auto;
  opacity: 1;
  margin-left: 0.4em;
  transition: width 0.2s ease-in-out, opacity 0.2s ease-in-out, margin 0.2s ease-in-out;
}


</style>

