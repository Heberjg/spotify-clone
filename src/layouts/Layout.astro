---
import Header from '../components/Header/Header.astro';
import SideBar from '../components/sidebar/sideBar.astro';
import Footer from '../components/Footer/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
		<ViewTransitions fallback='none' />
	</head>
	<body class="gap-2 p-2">
		<Header />
		<SideBar/>
		<main class="flex rounded-lg shadow-lg overflow-hidden place-content-center">
			<slot />
		</main>
		<Footer />

	</body>
</html>

<script is:inline>
  import { inject } from '@vercel/analytics';
  inject();
</script>


<style>
	@import "tailwindcss";
	@plugin "@tailwindcss/typography";
	
	* {
		box-sizing: border-box;
	}

	html {
		--background-color: #000;
		--text-color: #fff;
		--icon-color: #aaaaaa;
		--background-color-grid: #131313;
		width: 100dvw;
		height: 100dvh;
	}

	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: var(--background-color);
		color: var(--text-color);
		font-family: SpotifyMixUI, CircularSp-Arab, CircularSp-Hebr, CircularSp-Cyrl, CircularSp-Grek, CircularSp-Devanag, CircularStd, Helvetica Neue, Helvetica, Arial, sans-serif;
	}

	body {
		display: grid;
		grid-template-areas: 
			"hd hd"
			"sb mn"
			"ft ft";
		grid-template-columns: auto 1fr;
		grid-template-rows: auto 1fr auto;
	}

	main {
    grid-area: mn;
    --icon-color: #aaaaaa;
		background: linear-gradient(180deg, rgba(100, 100, 100, 0.6) 0%, var(--background-color-grid) 30%);
    }
</style>
